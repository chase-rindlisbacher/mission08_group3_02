
@{
    ViewData["Title"] = "Add/Edit Tasks";
}
@model mission08_group3_02.Models.TaskResponse;

@*Will receive inputs to be passed to controller as a TaskResponse Object that will be used to update database and the index view*@
<form method="post" class="text-center">
    <label for="Task">Task:</label><br />
    <input id="Task" asp-for="Task" required /><br /><br />

    <label for="DueDate">Due Date:</label><br />
    <input id="DueDate" asp-for="DueDate" type="date"/><br /><br />

    <label for="Quadrant">Quadrant:</label><br />
    <input id="Quadrant" asp-for="Quadrant" required /><br /><br />

    <label for="Category">Category:</label><br />
    <select id="Category" asp-for="CategoryId">
        <option value="1">Home</option>
        <option value="2">School</option>
        <option value="3">Work</option>
        <option value="4">Church</option>
    </select><br /><br />

    <label for="Completed">Completed:</label><br /><br />
    <input id="Completed" asp-for="Completed" type="checkbox" /> <br /> <br />


    <button type="submit">Submit</button>
</form>
